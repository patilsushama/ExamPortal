<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Exam Registration</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Poppins', sans-serif; background-color: #f5f7fa; }

    .header {
      background: linear-gradient(to right, #2c3e50, #3498db);
      color: white;
      padding: 20px;
      font-size: 26px;
      font-weight: 600;
      text-align: center;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    }

    .container {
      display: flex;
      height: calc(100vh - 72px);
    }

    .sidebar {
      width: 250px;
      background-color: #ffffff;
      border-right: 1px solid #e0e0e0;
      padding: 30px 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.05);
    }

    .sidebar h2 {
      color: #333;
      font-size: 20px;
      margin-bottom: 30px;
    }

    .nav-links {
      width: 100%;
    }

    .nav-links a {
      display: flex;
      align-items: center;
      color: #2c699a;
      padding: 12px 25px;
      text-decoration: none;
      font-size: 16px;
      transition: 0.3s ease;
    }

    .nav-links a i { margin-right: 12px; font-size: 18px; }

    .nav-links a:hover {
      background-color: #e8f0fe;
      border-left: 4px solid #0d6efd;
    }

    .main-content {
      flex: 1;
      padding: 40px;
      overflow-y: auto;
    }

    .main-content h3 {
      font-size: 24px;
      color: #333;
      margin-bottom: 20px;
    }

    form {
      background: #fff;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .form-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    label {
      display: block;
      margin-top: 10px;
      font-weight: 500;
      color: #333;
    }

    input,
    select {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 6px;
      background-color: #f9f9f9;
    }

    input[disabled] {
      background-color: #e9ecef;
      color: #555;
    }

    button {
      margin-top: 20px;
      padding: 10px 20px;
      background-color:#2c699a;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 15px;
      cursor: pointer;
    }

    button:hover {
      background-color: #063f91;
    }

    .success-message {
      margin-top: 15px;
      color: green;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <div class="header">
      ðŸŽ“ Welcome to the Exam Application System
  </div>

  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <h2><i class="fas fa-user-graduate"></i> Student</h2>
      <div class="nav-links">
        <a href="/studentinfo"><i class="fas fa-user-plus"></i> Student Profile</a>
        <a href="/examview"><i class="fas fa-edit"></i> Student Exam Registration</a>
        <a href="/studentexamview"><i class="fas fa-eye"></i> Student Exam View</a>
     
      </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <h3>Student Exam Registration</h3>

      <form action="/registerforexam" method="POST">
        <div class="form-grid">
          <div>
            <label>Name:</label>
            <input type="text" value="<%= student.sname %>" disabled>
          </div>
          <div>
            <label>Email:</label>
            <input type="email" value="<%= student.semail %>" disabled>
          </div>
          <div>
            <label>Password:</label>
            <input type="text" value="<%= student.spassword %>" disabled>
          </div>
          <div>
            <label>Contact:</label>
            <input type="text" value="<%= student.scontact %>" disabled>
          </div>
        </div>

        <label style="margin-top: 20px;">Select Exam Schedule:</label>
        <select name="schid" required>
  <option value="" disabled selected>-- Select Exam --</option>
  <% exams.forEach((exam) => { %>
    <option value="<%= exam.schid %>">
      <%= exam.cname %> | <%= exam.exname %> |
      <%= exam.date.toISOString().split('T')[0] %> |
      <%= exam.starttime %> - <%= exam.endtime %> |
      Marks: <%= exam.totalmark %>/<%= exam.passingmark %>
    </option>
  <% }) %>
</select>


        <button type="submit">Register Exam</button>

        <% if (typeof successMessage !== 'undefined' && successMessage) { %>
  <div class="success-message"><%= successMessage %></div>
<% } %>

      </form>
    </div>
  </div>

</body>
</html>
