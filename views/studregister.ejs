<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset='utf-8'>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <title>Student Registration</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to right, #2c699a, #00c6ff);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .container1 {
      background-color: #fff;
      padding: 40px;
      width: 100%;
      max-width: 500px;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
      transition: transform 0.3s ease;
    }

    .container1:hover {
      transform: scale(1.01);
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
      color: #1976d2;
    }

    .form-group {
      position: relative;
      margin-bottom: 20px;
    }

    .form-group input {
      width: 100%;
      padding: 12px 45px 12px 15px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 14px;
      outline: none;
      transition: 0.3s ease;
    }

    .form-group input:focus {
      border-color: #1976d2;
      box-shadow: 0 0 5px rgba(25, 118, 210, 0.3);
    }

    .form-group i {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #aaa;
    }

    .error-msg {
      color: red;
      font-size: 0.8rem;
      margin-top: 5px;
      display: none;
    }

    #studsub {
      width: 100%;
      padding: 12px;
      background-color: #1976d2;
      color: white;
      font-weight: 600;
      font-size: 15px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-top: 10px;
    }

    #studsub:hover {
      background-color: #125fa3;
    }

    .success-msg {
      text-align: center;
      margin-top: 15px;
      color: green;
      font-weight: bold;
      font-size: 0.95rem;
    }

    .success-msg a {
      margin-left: 10px;
      font-size: 0.85rem;
      color: #1976d2;
      text-decoration: none;
    }

    .success-msg a:hover {
      text-decoration: underline;
    }
          
/* icon css home */
.home-icon {
  position: absolute;
  top: 20px;
  left: 20px;
  font-size: 24px;
  text-decoration: none;
  color: white;
  background-color: rgba(0, 0, 0, 0.2);
  padding: 8px 12px;
  border-radius: 50%;
  transition: background-color 0.3s;
}

.home-icon:hover {
  background-color: rgba(0, 0, 0, 0.4);
}
  </style>
</head>
<body>
   <a href="/logoutadmin" class="home-icon">üè°</a>
  <form id="registerForm" action="/studentregister" method="POST" onsubmit="return validateForm()">
    <div class="container1">
      <h1>Student Registration</h1>

      <div class="form-group">
        <input type="text" id="sname" name="sname" placeholder="Enter Name" required autocomplete="off" />
        <i class="fas fa-user"></i>
        <div class="error-msg" id="nameError">Name should contain only letters and spaces.</div>
      </div>

      <div class="form-group">
        <input type="text" id="semail" name="semail" placeholder="Enter Email" required autocomplete="off" />
        <i class="fas fa-envelope"></i>
        <div class="error-msg" id="emailError">Please enter a valid email address.</div>
      </div>

      <div class="form-group">
        <input type="password" id="spassword" name="spassword" placeholder="Enter Password" required autocomplete="off" />
        <i class="fas fa-lock"></i>
        <div class="error-msg" id="passwordError">Password must be at least 6 characters long.</div>
      </div>

      <div class="form-group">
        <input type="text" id="scontact" name="scontact" placeholder="Enter Contact" required autocomplete="off" />
        <i class="fas fa-phone"></i>
        <div class="error-msg" id="contactError">Contact must be a 10-digit number.</div>
      </div>

      <input type="submit" id="studsub" value="Register" />

      <% if (message) { %>
        <p class="success-msg"><%= message %> 
          <a href="/studentlogin">Login</a>
        </p>
      <% } %>
    </div>
  </form>

  <script>
    const nameInput = document.getElementById("sname");
    const emailInput = document.getElementById("semail");
    const passwordInput = document.getElementById("spassword");
    const contactInput = document.getElementById("scontact");

    const nameError = document.getElementById("nameError");
    const emailError = document.getElementById("emailError");
    const passwordError = document.getElementById("passwordError");
    const contactError = document.getElementById("contactError");

    const nameRegex = /^[A-Za-z\s]+$/;
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const contactRegex = /^\d{10}$/;

    nameInput.addEventListener("input", () => {
      nameError.style.display = nameRegex.test(nameInput.value.trim()) ? "none" : "block";
    });

    emailInput.addEventListener("input", () => {
      emailError.style.display = emailRegex.test(emailInput.value.trim()) ? "none" : "block";
    });

    passwordInput.addEventListener("input", () => {
      passwordError.style.display = passwordInput.value.length >= 6 ? "none" : "block";
    });

    contactInput.addEventListener("input", () => {
      contactError.style.display = contactRegex.test(contactInput.value.trim()) ? "none" : "block";
    });

    function validateForm() {
      let isValid = true;

      if (!nameRegex.test(nameInput.value.trim())) {
        nameError.style.display = "block";
        isValid = false;
      }
      if (!emailRegex.test(emailInput.value.trim())) {
        emailError.style.display = "block";
        isValid = false;
      }
      if (passwordInput.value.length < 6) {
        passwordError.style.display = "block";
        isValid = false;
      }
      if (!contactRegex.test(contactInput.value.trim())) {
        contactError.style.display = "block";
        isValid = false;
      }

      return isValid;
    }
  </script>

</body>
</html>
