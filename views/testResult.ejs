<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Test Result</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f8f9fa;
      padding: 30px;
    }

    .container {
      max-width: 1000px;
      margin: auto;
      background: #fff;
      padding: 30px 40px;
      border-radius: 16px;
      box-shadow: 0 6px 16px rgba(0,0,0,0.1);
    }

    h2 {
      text-align: center;
      color: #28a745;
      margin-bottom: 20px;
    }

    .summary {
      background: #e9f7ef;
      border: 1px solid #c3e6cb;
      padding: 20px;
      border-radius: 12px;
      margin-bottom: 30px;
    }

    .summary p {
      font-size: 16px;
      margin: 8px 0;
    }

    .question-block {
      background: #f1f3f5;
      padding: 20px;
      border-radius: 12px;
      margin-bottom: 20px;
      border-left: 5px solid #007bff;
    }

    .question-block h4 {
      margin-bottom: 15px;
    }

    .options {
      margin-bottom: 10px;
    }

    .options li {
      padding: 8px 12px;
      background: #fff;
      border-radius: 8px;
      margin-bottom: 8px;
      list-style: none;
      border: 1px solid #dee2e6;
    }

    .correct {
      color: green;
      font-weight: bold;
    }

    .wrong {
      color: red;
      font-weight: bold;
    }

    .unanswered {
      color: orange;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2><%= message %></h2>
    <div class="summary">
      <p><strong>Total Questions:</strong> <%= summary.total %></p>
      <p><strong>Correct Answers:</strong> <%= summary.correct %></p>
      <p><strong>Wrong Answers:</strong> <%= summary.wrong %></p>
      <p><strong>Unanswered:</strong> <%= summary.unanswered %></p>
    </div>
   <% questions.forEach((q, index) => { 
     const options = [q.op1, q.op2, q.op3, q.op4];
     const correctIndex = q.correct - 1;
     const studentIndex = q.studentAnswer !== null ? q.studentAnswer - 1 : null;
%>
  <div class="question-block">
    <h4><%= index + 1 %>. <%= q.qname %></h4>

    <ul class="options">
      <li>A. <%= q.op1 %></li>
      <li>B. <%= q.op2 %></li>
      <li>C. <%= q.op3 %></li>
      <li>D. <%= q.op4 %></li>
    </ul>

    <p><strong>Your Answer:</strong>
      <% if (studentIndex !== null) { %>
        Option <%= q.studentAnswer %> - <%= options[studentIndex] %>
      <% } else { %>
        <span class="unanswered">Unanswered</span>
      <% } %>
    </p>

    <p><strong>Correct Answer:</strong> Option <%= q.correct %> - <%= options[correctIndex] %></p>

    <p>
      <% if (q.studentAnswer === null) { %>
        <span class="unanswered">⚠ Unanswered</span>
      <% } else if (q.isCorrect) { %>
        <span class="correct">✔ Correct</span>
      <% } else { %>
        <span class="wrong">❌ Wrong</span>
      <% } %>
    </p>
  </div>
<% }) %>
  </div>
</body>
</html>
