<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Course Management</title>
    <link rel="stylesheet" href="style.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      margin-top:0;
      background-color: #f0f4f8;
      /* padding: 30px; */
    }

    .flexparent {
      display: flex;
      gap: 20px;
      background-color: #fff;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .c1, .c2 {
      flex: 1;
      border-radius: 10px;
      padding: 20px;
      background-color: #ffffff;
      border: 1px solid #ddd;
    }

    .c1 h2 {
      font-size: 1.8em;
      font-weight: bold;
      color:#24587f;
      margin-bottom: 20px;
    }

    .c1 label {
      font-size: 1.1em;
      display: block;
      margin-bottom: 8px;
      color: #333;
    }

    .c1 input[type="text"] {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
      margin-bottom: 20px;
    }

    #but {
      background-color:  #2c699a;
      color: #333;
      padding: 10px;
      width: 100%;
      border: none;
      color:	#ffffff;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    #but:hover {
      background-color:	#224c70;
    }

    .c2 h1 {
      font-size: 1.8em;
      margin-bottom: 20px;
      color:  #24587f;
    }

     .ctable {
      width: 100%;
      border-collapse: collapse;
    }

    .ctable th, .ctable td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    .ctable th {
      background-color: #f5f5f5;
      color: #444;
    } 

     .ctable td {
      background-color: #fafafa;
    }

    .ctable a {
      text-decoration: none;
      color: #d9534f;
      font-weight: bold;
    }

    .ctable a:hover {
      color: #c9302c;
    }
  </style>
</head>
<body>
   <div class="header">
    Welcome to Exam Application System
  </div>

  <div class="slider">
    <div class="s1">
      <h3>Admin</h3>
     <a href="/adinfo">üë®‚Äçüíº Admin</a>
      <a href="/course">üìö Subject</a>  
      <a href="/examinfo">üìù Exam</a>
      <a href="/questioninfo">‚ùì Questions</a>
      <a href="/schedule"> üìÖ Schedule</a>
      <a href="/logoutadmin">üö™ Home</a>
    </div>

    <div class="s2">
       <div class="flexparent">
    <div class="c1">
      <h2>Add New Course</h2>
  <form name="frm" method="post" action="/savecourse" onsubmit="return validateCourse()">
<label for="cname">Course Name</label>
<input type="text" id="cname" name="cname" placeholder="Enter Course"
       required autocomplete="off">
<span id="cname-error" style="color:red; display:none; font-size: 14px;">
  Invalid Course Name .
</span><br>
        <input type="submit" name="b" id="but" value="Add Course">
      </form>
      <br>
      <% if (msg) { %>
  <p style="color: green; font-weight: bold;"><%= msg %></p>
<% } %>
    </div>

    <div class="c2">
      <h1>Existing Courses</h1>
      <table class="ctable">
        <thead>
          <tr>
            <th>Course ID</th>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (courseList && courseList.length > 0) { %>
            <% courseList.forEach(course => { %>
              <tr>
                <td><%= course.cid %></td>
                <td><%= course.cname %></td>
                <td>
                  <form action="/deletecourse" method="POST" style="display:inline;">
                    <input type="hidden" name="cid" value="<%= course.cid %>">
                    <button type="submit" style="background:none;border:none;color:#d9534f;font-weight:bold;cursor:pointer;">üóëÔ∏è</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3">No courses available.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
    </div>
  </div>
<script>

  //course validation
  function validateCourse() {
    const cname = document.getElementById("cname").value.trim();
    const error = document.getElementById("cname-error");

    if (cname.length < 1 || cname.length > 50) {
      error.textContent = "Course name must be between 1 and 50 characters.";
      error.style.display = "inline";
      return false;
    }

    for (let i = 0; i < cname.length; i++) {
      const char = cname[i];
      const isLetter =
        (char >= 'A' && char <= 'Z') || (char >= 'a' && char <= 'z');
      const isAllowedSymbol = char === '*' || char === '.' || char === '#' || char === '+';

      if (!isLetter && !isAllowedSymbol) {
        error.textContent =
          "Invalid course name";
        error.style.display = "inline";
        return false;
      }
    }

    for (let i = 0; i < cname.length; i++) {
      if (cname[i] >= '0' && cname[i] <= '9') {
        error.textContent = "Digits (0‚Äì9) are not allowed in course name.";
        error.style.display = "inline";
        return false;
      }
    }

    error.style.display = "none";
    return true;
  }

  document.getElementById("cname").addEventListener("input", function () {
    document.getElementById("cname-error").style.display = "none";
  });
</script>



</body>
</html>
